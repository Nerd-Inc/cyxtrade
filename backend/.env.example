# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/cyxtrade

# Redis
REDIS_URL=redis://localhost:6379

# JWT (REQUIRED - server will not start without JWT_SECRET)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cyxtrade-uploads

# Admin
ADMIN_PHONE_NUMBERS=+971501234567,+237699123456

# Blockchain (Tron) - Optional, server runs without blockchain if not configured
TRON_NETWORK=shasta
TRON_PRIVATE_KEY=your-backend-signer-private-key
